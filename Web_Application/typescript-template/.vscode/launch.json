{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                // "program": "${file}"
                "program": "${workspaceRoot}/src/main.ts",
                "cwd": "${workspaceRoot}",
                "console": "integratedTerminal",
                "outFiles": [ "${workspaceRoot}/dist/*.js" ],
                "sourceMaps": true,
                "preLaunchTask": "build",
                //"trace": "all",
                "smartStep": true
            }
        ]
    }