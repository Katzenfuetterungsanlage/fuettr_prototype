doctype html
html(lang="en")
  head
    title= "Webserver"
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    base(href="/")
    //- link(rel="stylesheet", href="node_modules/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="ngx/styles.bundle.css")
    link(rel="icon", type="image/x-icon" href="favicon.ico")
    script(src="node_modules/spin/dist/spin.min.js")
  body
    script(type='text/javascript')
      | window.__theme = 'bs4';
    if htlid && token
      input#token(type="hidden" name=htlid value=token)
    app-root
      #spinner(style="position:absolute; top:50%; left:50%;")
        script(type='text/javascript')
          | var spinner = new Spinner().spin()
          | document.getElementById("spinner").appendChild(spinner.el)
      script(src="ngx/inline.bundle.js")
      script(src="ngx/polyfills.bundle.js")
      //- script(src="ngx/styles.bundle.js")
      script(src="ngx/vendor.bundle.js")
      script(src="ngx/main.bundle.js")